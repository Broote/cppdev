<h1>Listing comments</h1>

<table>
  <tr>
    <th>User</th>
    <th>Parent</th>
    <th>Parent type</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.user_id %></td>
    <td><%= comment.commentable_id %></td>
    <td><%= comment.commentable_type %></td>
    <td><%= comment.comment %></td>
    <td><%= link_to 'Показать', comment %></td>
    <td><%= link_to 'Изменить', edit_comment_path(comment) %></td>
    <td><%= link_to 'Удалить', comment, :confirm => 'Вы уверены?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить комментарий', new_comment_path %>
