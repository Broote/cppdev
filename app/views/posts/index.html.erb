<h1>Listing posts</h1>
<div id="user_nav">
  <% if user_signed_in? %>
    Signed_in as <%= current_user.email %>. Not you?
    <%= link_to "Signed_out", destroy_user_session_path %>
  <%  else %>
    <%= link_to "Signed_up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path%>
  <%  end %>
</div>
<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Body</th>
    <th>Commentable</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.user.first_name  %></td>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.commentable %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
