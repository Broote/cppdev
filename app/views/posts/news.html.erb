<h1>Listing posts</h1>
<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Commentable</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @news.each do |post| %>
      <tr>
        <td><%= post.user.first_name %></td>
        <td><%= post.title %></td>
        <td><%= post.commentable %></td>

        <td><%= link_to 'Show', post %></td>
        <% if can? :update, post %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
        <% end %>
      </tr>
  <% end %>
</table>
<% if can? :create, Post %>
    <br/><%= link_to 'New Post', new_post_path %>
<% end %>