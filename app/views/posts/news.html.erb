<h1>Новости</h1>

<% @news.each do |post| %>
    <h3><%= post.title %></h3>
    <p><%= truncate(post.body, :length => 800) %>
      <%= link_to 'Показать', post %></p>
    <% if can? :update, post %>
        <td><%= link_to 'Изменить', edit_post_path(post) %></td>
        <td><%= link_to 'Удалить', post, :confirm => 'Вы уверены?', :method => :delete %></td>
    <% end %>
<% end %>