<h1>Новости</h1>

<% @news.each do |post| %>
    <h3><%= post.title %></h3>
    <p><%= truncate(post.body, :length => 800) %>
      <%= link_to 'Показать', post %>
    <% if can? :update, post %>
        <%= link_to 'Изменить', edit_post_path(post) %>
        <%= link_to 'Удалить', post, :confirm => 'Вы уверены?', :method => :delete %></p>
    <% end %>
<% end %>