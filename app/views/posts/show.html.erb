<p class="notice"><%= notice %></p>
 
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>
 
<p>
  <b>Content:</b>
  <%= @post.body %>
</p>
 
<h2>Comments</h2>
<%= render @post.comments %>
 
<h2>Add a comment:</h2>
<%= render "comments/form" %>
 
<br />
<% if can? :update, Post %>
    <%= link_to 'Edit Post', edit_post_path(@post) %>
    <br>
<% end %>
<%= link_to 'Back to Posts', posts_path %>